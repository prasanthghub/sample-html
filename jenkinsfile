pipeline {
    agent any
    
    stages {
        stage('Build') {
            steps {
                script {
                    dockerImage = docker.build("static-website")
                }
            }
        }
        stage('Deploy') {
            steps {
                script {
                    docker.withRegistry('', 'prasanthmeduri') {
                        dockerImage.push("${env.BUILD_NUMBER}")
                        dockerImage.push("latest")
                    }
                }
            }
        }
    }
    
    post {
        always {
            cleanWs()
        }
    }
}
